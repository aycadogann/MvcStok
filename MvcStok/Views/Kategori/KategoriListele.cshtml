@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategoriler>

@{
    ViewBag.Title = "KategoriListele";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <th>@kategori.KategoriId</th>
                <td>@kategori.KategoriAd</td>
                <td><a href="/Kategori/Sil/@kategori.KategoriId" class="btn btn-danger">SİL</a></td>
                <td><a href="/Kategori/KategoriGetir/@kategori.KategoriId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("KategoriListele",new {sayfa}))
<a href="/Kategori/YeniKategoriEkle/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>

